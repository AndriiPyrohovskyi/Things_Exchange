{
    "compilerOptions": {
      "lib": ["es5", "es6"],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "declaration": false,
      "removeComments": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*"
    ]
  }